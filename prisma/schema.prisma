generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Accounts {
  id          String @id @default(uuid())
  userId      String @unique
  accountName String @unique
  balance     Float
  user        User   @relation(references: [id], fields: [userId])

  Transaction Transaction[]
}

model TransactionInquiry {
  id         String   @id @unique
  inquiryKey String   @unique
  txName     String
  rxName     String
  amount     Float
  expiredAt  DateTime
}

model User {
  id                String    @id @unique
  fullName          String
  userName          String    @unique
  phone             String
  email             String    @unique
  password          String
  email_verified_at DateTime?

  Notification Notification[]

  Accounts Accounts[]
}

model Transaction {
  id                  String   @id @unique
  accountId           String
  amount              Float
  sofNumber           String
  dofNumber           String
  transactionType     String
  transactionDateTime DateTime
  account             Accounts @relation(fields: [accountId], references: [id])
}

model Notification {
  id        String   @id @unique
  userId    String   @unique
  title     String
  body      String
  status    Int
  isRead    Int
  createdAt DateTime @default(now())
  user      User     @relation(references: [id], fields: [userId])
}

model OTP {
  id        String   @id @unique
  userName  String
  otp       String
  expiredAt DateTime
  createdAt DateTime @default(now())
}
